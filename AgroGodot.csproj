<Project Sdk="Godot.NET.Sdk/3.3.0">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);GODOT;TICK_LOG</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="glTF2Loader" Version="1.1.3-alpha" />
    <PackageReference Include="glTFLoader" Version="1.0.0.3" />
    <PackageReference Include="Microsoft.glTF.CPP" Version="1.6.1" />
    <PackageReference Include="SharpGLTF.Core" Version="1.0.0-alpha0026" />
  </ItemGroup>

  <!-- TODO for win something like here https://superuser.com/questions/1580436/how-to-delete-matching-directories-recursively-using-windows-command -->

  <Target Name="Clean60" BeforeTargets="GenerateTargetFrameworkMonikerAttribute">
    <Message Importance="normal" Text="Removing build files" />
    <Exec Command="rm -rf `find . -type d -regex '^\.\/[^\.].*bin$'`" Timeout="100"/>
    <Exec Command="rm -rf `find . -type d -regex '^\.\/[^\.].*obj$'`" Timeout="100"/>
  </Target>
</Project>